<h2>New Goal</h2>
<form action="<%= goals_url %>" method="post">

  <%= auth_token %>

  <input type="hidden" name="goal[completed]" value="false">

  <label>Title
    <input type="text" name="goal[title]">
  </label>

  <label>Details
    <textarea name="goal[details]"></textarea>
  </label>

  <label>Public<input type="radio" name="goal[visible]" value="true"></label>
  <label>Private<input type="radio" name="goal[visible]" value="false"></label>

  <input type="submit" value="Add Goal">
</form>
